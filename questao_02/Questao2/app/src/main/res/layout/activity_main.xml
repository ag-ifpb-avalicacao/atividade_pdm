<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juan.questao2.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="7dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adultos"
                android:textSize="30sp"/>
            <EditText
                android:id="@+id/textAdulto"
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crianças"
                android:textSize="30sp"/>
            <EditText
                android:id="@+id/textCrianca"
                android:layout_width="170dip"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/calcular"
        android:layout_marginLeft="253dip"
        android:layout_marginTop="15dip"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_purple"/>
    <View
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@android:color/holo_purple"/>
    <LinearLayout
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados:"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que você precisa para a festa:"
            android:textSize="18sp"/>
    </LinearLayout>
    <TableLayout
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <ImageView
                android:src="@drawable/cake"
                android:layout_width="90px"
                android:layout_height="90px"/>
            <TextView
                android:id="@+id/quantBolo"
                android:layout_marginTop="7dip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0.0"
                android:textSize="18sp"/>
            <TextView
                android:layout_marginTop="7dip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="kg de bolo"
                android:textSize="18sp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dip">
            <ImageView
                android:src="@drawable/doce"
                android:layout_width="90px"
                android:layout_height="90px"/>
            <TextView
                android:id="@+id/quantDoce"
                android:layout_marginTop="7dip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0.0"
                android:textSize="18sp"/>
            <TextView
                android:layout_marginTop="7dip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="unidade de doces"
                android:textSize="18sp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dip">
            <ImageView
                android:src="@drawable/salgado"
                android:layout_width="90px"
                android:layout_height="90px"/>
            <TextView
                android:id="@+id/quantSalgado"
                android:layout_marginTop="7dip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0.0"
                android:textSize="18sp"/>
            <TextView
                android:layout_marginTop="7dip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="unidade de salgados"
                android:textSize="18sp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dip">
            <ImageView
                android:src="@drawable/refri"
                android:layout_width="90px"
                android:layout_height="90px"/>
            <TextView

                android:id="@+id/quantRefri"
                android:layout_marginTop="7dip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0.0"
                android:textSize="18sp"/>
            <TextView
                android:layout_marginTop="7dip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="litros de refrigerante"
                android:textSize="18sp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
